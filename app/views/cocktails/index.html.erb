<div class="container">
  <div class="row">
    <div class="col-xs-12">

       <div class="container">
        <div class="row">
         <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
           <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
            <div class="card-category">Cocktail</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <img class="card-user avatar" src="user.jpg">
            <%= link_to "details", cocktail_path(cocktail) %>
          </div>
          </div>
         <% end %>
        </div>
        </div>

    <br>
      <h4><%= link_to "Add a New Cocktail", new_cocktail_path(@cocktail) %></h4>
    </div>
  </div>
</div>

